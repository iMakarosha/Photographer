                    @Html.ActionLink("Фотограф", "Index", "Home", new { area = "" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right header-menu--links">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
